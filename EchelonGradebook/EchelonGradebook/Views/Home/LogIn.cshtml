@model EchelonGradebook.Models.Login
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<h1> </h1>
<form asp-action="Login">
    <div>
        <div class="col-md-5"></div>
        <div class="col-md-2">
            <div class="form-horizontal">
                <div class="form-group">
                    <input asp-for="Username" type="text" placeholder="Username or Email" />
                    <span asp-validation-for="Username" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="text" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span><br />
                </div>
                <div class="form-group ">
                    <label asp-for="Username">
                        <input type="submit" value="Login" class="btn" />
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-5"></div>
    </div>
</form>
